/* Below program is not providing correct answer on Online Compiler though the logic is correct. */

#include<iostream.h>
using namespace std;

int main() {

	int n;
	cin >> n;
	
	int count = 0;
	while(n != 0) {
		
		if(n & 1)
		{
			
			count++;
		
		}
		
		n = n >> 1;
	
	}
	
	cout << "Number of set bits is : " << count;
	
	return 0;
}
